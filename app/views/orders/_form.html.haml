=semantic_form_for @order do |f|
  =f.inputs "Order" do
    =f.input :name
    =f.input :address, :as => :text, :rows => 3, :cols => 40
    =f.input :email, :size => 40
    =f.input :pay_type, :as => :select, :collection => Order::PAYMENT_TYPES, :prompt => 'Select a payment method'
    =f.input :user_id, :as => :hidden, :value => current_user.id
  =f.buttons