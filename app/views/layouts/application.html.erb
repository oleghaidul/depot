<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store" >
	<div id="banner" >
	<%= link_to image_tag("logo.png"), store_path %>
	<%= @page_title || "Pragmatic Bookshelf" %>
	</div>
		<div id="columns" >
		<div id="side" >
			<%= link_to "Home", store_path %><br />
			<%= link_to "Questions", "#" %><br />
			<%= link_to "News", "#" %><br />
			<%= link_to "Contact", "#" %><br />
			<p><%= time_tag Time.now %></p>
			<p><%= @session %></p>
		</div>
		<div id="main" >
			<%= yield %>
		</div>
	</div>
</body>

</html>
